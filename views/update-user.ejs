<!-- include Header -->
<%- include("include/_header.ejs")%>
    <!-- include Header -->

    <!-- Main Site -->
    <main id="site-main">
        <div class="container">
            <div class="table-parent-div">
                <div class="table-div">
                    <div class="add-user-box">
                        <a href="/">
                            <span class=""><i class="fa-solid fa-arrow-left"></i></i></span>
                        </a>
                    </div>
                    <div class="info">
                        <h2>Update Users</h2>
                        <p>Use the blew form to creat a updateew account</p>
                    </div>
                    <!-- form haneling -->
                    <div class="form-div">
                        <form action="/" method="post" id="update-user">
                            <div class="new-user">
                                <div class="form-group">
                                    <label for="name">Name</label>
                                    <input type="hidden" name="id" value="">
                                    <input type="text" name="name" value="" placeholder="Enter Name">
                                </div>
                                <div class="form-group">
                                    <label for="email">Email</label>
                                    <input type="text" name="email" value="" placeholder="example@gmail.com">
                                </div>
                                <div class="form-group ">
                                    <label for="gender" class="lbl-title">Gender</label>
                                    <div class="radio-div">
                                        <div class="radio-inline">
                                            <input type="radio" name="gender" value="Male">
                                            <label for="gender">Male</label>
                                        </div>
                                        <div class="radio-inline">
                                            <input type="radio" name="gender" value="Famale">
                                            <label for="gender">Famale</label>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group ">
                                    <label for="status" class="lbl-title">Status</label>
                                    <div class="radio-div">
                                        <div class="radio-inline">
                                            <input type="radio" name="status" value="Active">
                                            <label for="status">Active</label>
                                        </div>
                                        <div class="radio-inline">
                                            <input type="radio" name="status" value="InActive">
                                            <label for="status">InActive</label>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <button type="submit">Save</button>
                                </div>
                            </div>
                        </form>
                    </div>

                </div>
            </div>
        </div>
    </main>
    <!-- Main Site -->

    <!-- include Footer -->
    <%- include("include/_footer.ejs")%>
        <!-- include Footer -->